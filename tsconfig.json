{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "declaration": true,
    "declarationDir": "typings",
    "esModuleInterop": true,
    "incremental": true,
    "lib": [
      "ESNext",
      "ES5",
      "ES6",
      "ES7",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "ES6"
  },
  "typeAcquisition": {
    "enable": true
  }
}
